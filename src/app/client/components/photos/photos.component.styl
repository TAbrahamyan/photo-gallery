@import '../../stylus/_variables';

.photos
  display $flex
  flex-wrap $wrap
  flex-direction $column
  padding 2rem

  & > h1,
  & > div
    @media (max-width 700px)
      display $flex
      justify-content $center
      flex-wrap $wrap
      text-align $center

  img
    width $size100percent
    max-width 150px
    height 120px
    border-radius 8px
    margin 0.5rem 1rem 0 0
    cursor pointer

    @media (max-width 700px)
      margin 0.5rem

.backdrop
  position fixed
  z-index 1
  padding-top 9%
  left 0
  top 0
  width $size100percent
  height $size100percent
  background-color rgba(0, 0, 0, 0.9)

  .close
    position absolute
    margin-top -8%
    right 0.5%
    font-size 2em
    float right
    color white
    cursor $pointer

  img
    display $flex
    width $size100percent
    max-width 700px
    height auto
    margin 0 auto

    @media (max-width 767px)
      height 450px

    @media (max-width 480px)
      padding-top 7%
