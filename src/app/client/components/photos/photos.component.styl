.photos
  display flex
  flex-wrap wrap
  flex-direction column
  padding 2rem

  & > h1,
  & > div
    @media (max-width 700px)
      display flex
      justify-content center
      flex-wrap wrap
      text-align center

  img
    width 100%
    max-width 150px
    height 120px
    border-radius 8px
    margin 0.5rem 1rem 0 0
    cursor pointer

    @media (max-width 700px)
      margin 0.5rem

.backdrop
  overflow-x none
  position fixed
  z-index 1
  padding-top 60px
  left 0
  top 0
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.4)

  .close
    font-size 3em
    margin-right: 3rem
    float right
    color white
    cursor pointer

  img
    display flex
    position relative
    width 100%
    max-width 850px
    height 550px
    margin 0 auto


