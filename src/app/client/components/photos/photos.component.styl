@import '../../stylus/_variables';

.photos
  display $flex
  flex-direction: $column
  flex-wrap $wrap
  padding 2rem

  .is-select-photos
    margin-top -1.5rem
    button
      margin-right 1rem

  & > h1
    @media (max-width 700px)
      text-align $center

  &__list
    display $flex
    flex-wrap wrap
    @media (max-width 700px)
      display $flex
      justify-content $center
      flex-wrap $wrap

    button
      position relative
      color $white
      top 30%

    img
      display block
      width $size100percent
      max-width 150px
      height 120px
      border-radius 8px
      margin 0.5rem 1rem 0 0
      cursor $pointer
      @media (max-width 700px)
        margin 0.5rem

    .is-select
      border 10px solid gray
      &:hover + .select-checkbox
        opacity 1

    .select-checkbox
      opacity 0
      transition 1s
      transform scale(5)
      box-shadow: 0px 0px 20px 13px gray
      position relative
      top -45%
      left 43%
      &:hover,
      &:checked
        opacity 1
        cursor pointer

.backdrop
  position fixed
  z-index 1
  padding-top 9%
  left 0
  top 0
  width $size100percent
  height $size100percent
  background-color rgba(0, 0, 0, 0.9)

  .close
    position absolute
    margin-top -8%
    right 0.5%
    font-size 2em
    float right
    color $white
    cursor $pointer

  img
    display $flex
    width $size100percent
    max-width 700px
    height auto
    margin 0 auto
    @media (max-width 767px)
      height 450px
    @media (max-width 480px)
      padding-top 7%
