@import '../../stylus/_variables';

.photos
  display $flex
  flex-direction: $column
  flex-wrap $wrap
  padding 1rem

  .is-select-photos
    margin-bottom 1rem
    @media (max-width 426px)
      display $flex
      justify-content $center
    button
      margin 1rem 0.5rem 0 0
      @media (max-width 426px)
        width 80px
        height 35px
      span
        @media (max-width 426px)
          font-size 0.8em

  .date
    @media (max-width 426px)
      text-align $center
      font-size 1.2em
      margin-bottom -1rem

  &__list
    display $flex
    flex-wrap $wrap
    margin 1rem 0
    @media (max-width 426px)
      display $flex
      justify-content $center

    button
      position relative
      color $white
      top 10%

    img
      display block
      width $size100percent
      max-width 150px
      height 170px
      border-radius 6px
      margin -2rem 0.5rem 0 0
      cursor $pointer
      @media (max-width 769px)
        max-width 120px
        height 140px
      @media (max-width 426px)
        max-width 88px
        height 110px

    .is-select
      border 8px solid gray
      margin-top -1rem
      &:hover + .select-checkbox
        opacity 1
      @media (max-width 426px)
        margin-top 0.7rem

    .select-checkbox
      opacity 0
      transition 1s
      transform scale(5)
      box-shadow: 0px 0px 20px 13px gray
      position relative
      top -54%
      left 44%
      &:hover,
      &:checked
        opacity 1
        cursor pointer
      @media (max-width 426px)
        transform scale(4)
        top -45%
        left 42%

.backdrop
  position fixed
  z-index 1
  padding-top 9%
  left 0
  top 0
  width $size100percent
  height $size100percent
  background rgba(0, 0, 0, 0.9)

  .close
    position absolute
    margin-top -8%
    right 0.5%
    font-size 2em
    float right
    color $white
    cursor $pointer

  img
    display $flex
    width $size100percent
    max-width 700px
    height auto
    margin 0 auto
    @media (max-width 767px)
      height 450px
    @media (max-width 480px)
      padding-top 7%
